                    <hr>
                </div>
                <div class="body">
                    <ul class="fa-ul">
                        <li><span class="fa-li"><i class="fas fa-heart"></i></span>Foydalanish uchun token: </li>
                    </ul>
                    <div class="token-content"><%= token %></div>
                </div>
                <div class="footer">
                    <a href="#"><i class="fab fa-facebook-square"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-tumblr"></i></a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
